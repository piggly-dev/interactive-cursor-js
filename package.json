{
	"name": "@piggly/interactive-cursor-js",
	"version": "1.0.0-beta.1",
	"description": "A lightweight library for creating a custom cursor which interact with pages and elements.",
	"scripts": {
		"lint": "eslint --ext .ts,.js --ignore-path .gitignore --fix src",
		"format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
		"build:watch": "rimraf ./dev/dist && rollup -c rollup.config.dev.js -w",
		"build:umd": "rimraf ./dist && rollup -c",
		"build:cjs": "rimraf ./lib && tsc --module commonjs --outDir lib",
		"build:esm": "rimraf ./esm && tsc --module ESNext --outDir esm",
		"build": "npm run build:cjs && npm run build:esm && npm run build:umd",
		"prepare": "npm run build",
		"version": "npm run format && git add -A src",
		"postversion": "git push && git push --tags",
		"prepublishOnly": "npm test && npm run lint",
		"preversion": "npm run lint",
		"test": "jest",
		"test:debug": "node --inspect node_modules/.bin/jest --runInBand"
	},
	"main": "lib/index.js",
	"types": "lib/index.ts",
	"module": "esm/index.js",
	"unpkg": "dist/icursor.min.js",
	"browser": "dist/icursor.min.js",
	"files": [
		"lib/**/*",
		"esm/**/*",
		"dist/**/*"
	],
	"keywords": [
		"form"
	],
	"author": "piggly",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/piggly-dev/interactive-cursor-js.git"
	},
	"bugs": {
		"url": "https://github.com/piggly-dev/interactive-cursor-js/issues"
	},
	"homepage": "https://github.com/piggly-dev/interactive-cursor-js#readme",
	"devDependencies": {
		"@types/jest": "^27.4.1",
		"@types/node": "^17.0.30",
		"@typescript-eslint/eslint-plugin": "^5.21.0",
		"@typescript-eslint/parser": "^5.21.0",
		"@zerollup/ts-transform-paths": "^1.7.18",
		"eslint": "^8.14.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-prettier": "^4.0.0",
		"express": "^4.18.1",
		"jest": "^27.5.1",
		"prettier": "^2.6.2",
		"rimraf": "^3.0.2",
		"rollup": "^1.32.1",
		"rollup-plugin-node-resolve": "^5.2.0",
		"rollup-plugin-typescript": "^1.0.1",
		"rollup-plugin-uglify": "^6.0.4",
		"ts-jest": "^27.1.4",
		"typescript": "^4.6.4"
	},
	"dependencies": {
		"gsap": "^3.10.4"
	}
}
